kalinan_saat = int ( giriş ( "Kaldığınız saati girin" ))
toplam_ucret = 0
kalinan_saat  <= 1 ise :
    toplam_ucret = 5
elif ( kalinan_saat > 1 ) ve ( kalinan_saat <= 5 ):
    toplam_ucret = kalinan_saat * 4
elif  kalinan_saat > 5 :
    toplam_ucret = kalinan_saat * 3
    
print ( "Ödeyeceğiniz miktar =" , toplam_ucret )

